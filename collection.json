          "host": ["localhost"],
          "port": "8080",
          "path": ["favourites", "delete"],
          "query": [
            {"key": "user_id", "value": "<USER_UUID>"},
            {"key": "asset_id", "value": "<ASSET_UUID>"}
          ]
        }
      }
    },
    {
      "name": "Edit Favourite Description (PUT)",
      "request": {
        "method": "PUT",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"description\": \"Updated description for asset\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/favourites/edit?user_id=<USER_UUID>&asset_id=<ASSET_UUID>",
          "protocol": "http",
          "host": ["localhost"],
