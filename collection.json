{
  "info": {
    "name": "GWI Favourites API",
    "description": "Postman collection for testing GWI favourites endpoints. All endpoints require JWT in Authorization header. Supports pagination on List Favourites via 'limit' and 'offset' query parameters.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get JWT Token",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"user_id\": \"<USER_UUID>\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/token",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["token"]
        }
      }
    },
    {
      "name": "List Favourites",
      "request": {
        "method": "GET",
        "header": [{"key": "Authorization", "value": "Bearer <TOKEN>"}],
        "url": {
          "raw": "http://localhost:8080/favourites?limit=10&offset=0",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["favourites"],
          "query": [
            {"key": "limit", "value": "10"},
            {"key": "offset", "value": "0"}
          ]
        }
      }
    },
    {
      "name": "Add Chart Favourite",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer <TOKEN>"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"type\": \"chart\",\n  \"favorite\": true,\n  \"asset\": {\n    \"Title\": \"Sales Q1\",\n    \"XAxisTitle\": \"Month\",\n    \"YAxisTitle\": \"Revenue\",\n    \"Data\": [100, 200, 150],\n    \"Description\": \"Quarter 1 sales chart\"\n  }\n}"
        },
        "url": {
          "raw": "http://localhost:8080/favourites/add",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["favourites", "add"]
        }
      }
    },
    {
      "name": "Add Insight Favourite",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer <TOKEN>"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"type\": \"insight\",\n  \"favorite\": false,\n  \"asset\": {\n    \"Text\": \"40% of millennials spend more than 3 hours on social media daily\",\n    \"Description\": \"Millennial social media usage\"\n  }\n}"
        },
        "url": {
          "raw": "http://localhost:8080/favourites/add",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["favourites", "add"]
        }
      }
    },
    {
      "name": "Add Audience Favourite",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer <TOKEN>"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"type\": \"audience\",\n  \"favorite\": true,\n  \"asset\": {\n    \"Gender\": \"Male\",\n    \"BirthCountry\": \"UK\",\n    \"AgeGroup\": \"24-35\",\n    \"SocialHours\": 4,\n    \"Purchases\": 2,\n    \"Description\": \"Males 24-35, UK, heavy social media users\"\n  }\n}"
        },
        "url": {
          "raw": "http://localhost:8080/favourites/add",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["favourites", "add"]
        }
      }
    },
    {
      "name": "Update Favorite Status (PUT)",
      "request": {
        "method": "PUT",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer <TOKEN>"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"favorite\": false\n}"
        },
        "url": {
          "raw": "http://localhost:8080/favourites/remove?asset_id=<ASSET_UUID>",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["favourites", "remove"],
          "query": [
            {"key": "asset_id", "value": "<ASSET_UUID>"}
          ]
        }
      }
    },
    {
      "name": "Delete Favourite (DELETE)",
      "request": {
        "method": "DELETE",
        "header": [{"key": "Authorization", "value": "Bearer <TOKEN>"}],
        "url": {
          "raw": "http://localhost:8080/favourites/delete?asset_id=<ASSET_UUID>",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["favourites", "delete"],
          "query": [
            {"key": "asset_id", "value": "<ASSET_UUID>"}
          ]
        }
      }
    },
    {
      "name": "Edit Favourite Description (PUT)",
      "request": {
        "method": "PUT",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer <TOKEN>"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"description\": \"Updated description for asset\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/favourites/edit?asset_id=<ASSET_UUID>",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["favourites", "edit"],
          "query": [
            {"key": "asset_id", "value": "<ASSET_UUID>"}
          ]
        }
      }
    }
  ]
}
